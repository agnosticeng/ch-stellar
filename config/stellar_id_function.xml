<functions>
    <function>
        <name>stellar_id</name>
        <type>executable_pool</type>
        <format>ArrowStream</format>
        <stderr_reaction>log</stderr_reaction>
        <command>ch-stellar function id</command>

        <pool_size>16</pool_size>
        <max_command_execution_time>300</max_command_execution_time>
        <command_read_timeout>180000</command_read_timeout>
        <command_write_timeout>60000</command_write_timeout>

        <argument>
            <name>ledger_sequence</name>
            <type>Int32</type>
        </argument>
        <argument>
            <name>transaction_order</name>
            <type>Int32</type>
        </argument>
        <argument>
            <name>operation_order</name>
            <type>Int32</type>
        </argument>

        <return_type>Int64</return_type>
    </function>
</functions>
